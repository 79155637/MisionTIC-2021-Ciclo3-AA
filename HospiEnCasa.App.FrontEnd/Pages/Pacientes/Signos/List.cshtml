@page
@model HospiEnCasa.App.FrontEnd.Pages.Pacientes.Signos.ListModel
@{
    int pacienteId= Model.Paciente.Id;
}

<h6>Listado de Signos Vitales de: @Model.Paciente.Nombre @Model.Paciente.Apellidos</h6>

<table class="table">
    @foreach (var signo in Model.SignosPaciente)
    {
        <tr>
            <td>@signo.Signo</td>
             <td>@signo.Valor</td>
            <td>@signo.FechaHora</td>
        </tr>
    }
</table>
                <a class="btn btn-primary table-btn" asp-page="../Details" asp-route-pacienteId="@pacienteId">
                    <i aria-hidden="true">Regresar</i>
                </a>

